{
  "compilerOptions": {
    "module": "commonJS",
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"],
  "include": ["src", "env.d.ts", "tests"]
}
